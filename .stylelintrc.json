{
  "extends": [
    "stylelint-config-standard",
    "stylelint-scss"
  ],
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "unit-case": null,
    "unit-no-unknown": [
      true,
      {
        "ignoreUnits": [
          "PX"
        ]
      }
    ]
  },
  "ignoreFiles": [
    "dist/**/*"
  ]
}